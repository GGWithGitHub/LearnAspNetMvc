
@{
    ViewBag.Title = "User1";
}

<h2>User1 Page</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated) { 
            <h4>You are an authenticated person</h4>
            <br/>
            <h4>Your emailId: @ViewBag.UserEmail</h4>
        }
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Logout Here", "Logout", "FormBaseAuth", null, new { @class = "btn btn-default" })
    </div>
</div>

