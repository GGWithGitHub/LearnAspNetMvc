@model List<Learn_mvc.Models.City>

<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

@if (Model.Count > 0)
{
    <table>
        <tr>
            <th>City ID</th>
            <th>City Name</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }

    </table>
}
